<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DataCompany.Views.DropDownLists.Companies.CreateCompany">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="✔" Clicked="SaveCompany" />
    </ContentPage.ToolbarItems>

    <StackLayout Margin="6,0,0,0">
        <Label Text="Имя" FontSize="Medium" />
        <Entry MaxLength="30" Keyboard="Text" Text="{Binding CompanyName}" />
    </StackLayout>
</ContentPage>